
@model Product

<h2>@Model.Name</h2>

<div class="thumbnail">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a>@Model.Name</a>
        </h3>
        <h4>@Model.Description</h4>
    </div>
    <br />
    <p class="button">
        <a class="btn btn-primary"
           asp-controller="Product"
           asp-action="List">Back to all products</a>
    </p>
</div>